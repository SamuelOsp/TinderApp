<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Tema claro global, sin action bar -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowBackground">@android:color/white</item>
    <item name="android:forceDarkAllowed">false</item>
    <item name="android:statusBarColor">@android:color/white</item>
    <item name="android:navigationBarColor">@android:color/white</item>
  </style>

  <!-- Pre-Android 12: sin splash moderno; lanzamos directo con AppTheme -->
  <style name="AppTheme.NoActionBarLaunch" parent="AppTheme" />

  <!-- Alias que usas en el manifest para actividades sin barra -->
  <style name="Theme.Ionic.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowBackground">@android:color/white</item>
    <item name="android:forceDarkAllowed">false</item>
  </style>

</resources>




